<% layout('/layouts/boilerplate') %>
<body>
    <br />
    <h1>NEW LISTING</h1>
    <form method="POST" action="/listings" class="needs-validation" novalidate>
        <div class="col col-8 offset-2">
            <div>
                <label for="title" class="form-label">Title</label>
                <input name="title" placeholder="Enter Title" type="text" class="form-control" required>
                <div class="invalid-feedback">Invalid Title</div><br>
            </div>
            <div>
                <label for="description" class="form-label">Description</label>
                <textarea name="description" placeholder="Enter Description" class="form-control" required></textarea>
                <div class="invalid-feedback">Invalid Description</div><br>
            </div>
            <div>
                <label for="image" class="form-label">Image URL</label>
                <input name="image" placeholder="Enter Image URL" type="text" class="form-control"><br>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input name="price" placeholder="Enter Price" class="form-control" required>
                    <div class="invalid-feedback">Invalid Price</div><br>
                </div>
                <div class="col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input name="country" placeholder="Enter Country" type="text" class="form-control" required>
                    <div class="invalid-feedback">Invalid Country</div><br>
                </div>
            </div>
            <div>
                <label for="location" class="form-label">Location</label>
                <input name="location" placeholder="Enter Location" type="text" class="form-control" required>
                <div class="invalid-feedback">Invalid Location</div><br>
            </div>
            <button class="btn btn-dark add-btn mb-2">Submit</button>
        </div>
    </form>
</body>